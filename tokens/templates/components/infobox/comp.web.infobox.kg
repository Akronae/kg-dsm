// @replacepath: tokens/comp.web.json

comp
.infobox
[aspectRatio: 'mobile' | 'desktop']
[
  {
    "container": {
      "value": {
        "fill": "{sem.color.surface.sub}",
        "borderRadius": "{sem.infobox.container.borderRadius}",
        "verticalPadding": "{sem.infobox.container.padding}",
        "horizontalPadding": "{sem.infobox.container.padding}",
        "itemSpacing": "{sem.infobox.container.spacing}",
        "layoutMode": "<< aspectRatio == 'mobile' ? 'vertical' : 'horizontal' >>"
      },
      "type": "composition"
    },
    "icon": {
      "size": {
        "value": {
          "width": "{sem.infobox.icon.size}",
          "height": "{sem.infobox.icon.size}"
        },
        "type": "composition"
      }
    },
    "rightSide": {
      "container": {
        "value": {
          "itemSpacing": "{sem.infobox.rightSide.container.spacing}"
        },
        "type": "composition"
      },
      "textWrapper": {
        "container": {
          "value": {
            "paddingTop": "{sem.infobox.rightSide.textWrapper.container.paddingTop}",
            "itemSpacing": "{sem.infobox.rightSide.textWrapper.container.spacing}"
          },
          "type": "composition"
        },
        "title": {
          "value": {
            "typography": "{sem.typography.textStyle.label.body.md}",
            "fill": "{sem.color.text.dark}"
          },
          "type": "composition"
        },
        "description": {
          "value": {
            "typography": "{sem.typography.textStyle.paragraph.sm.default}",
            "fill": "{sem.color.text.default}"
          },
          "type": "composition"
        }
      }
    }
  }
]